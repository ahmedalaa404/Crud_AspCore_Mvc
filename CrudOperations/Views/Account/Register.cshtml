@model RegisterVM
@{
	ViewData["Title"] = "Register";

	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

	 <div asp-validation-summary="All" style="color:red" >

	 </div>

<form action="Register" method="post">

	<div >
		<input class="text" asp-for="Fname" style="margin-bottom:20px" required="" placeholder="Fname">
	</div>	
	
	<div >
		<input class="text" style="margin-top:20px" asp-for="Lname" required="" placeholder="Lname">
	</div>

	<div>
		<input type="text" class="text" style="margin-top:20px" asp-for="PhoneNumber" required="" placeholder="PhoneNumber">
	</div>




	<div>
		<input class="text email" asp-for="Email" placeholder="Email" required="">
		<span asp-validation-for="Email"></span>
	</div>

	<div>
		<input class="text" asp-for="Password" placeholder="Password" required="">
		<span asp-validation-for="Password"></span>
	</div>
	<div>
		<input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
		<span asp-validation-for="ConfirmPassword"></span>

	</div>


	<div class="wthree-text">
		<label class="anim">
			<input type="checkbox" class="checkbox" asp-for="IsAgree" required="">
			<span>I Agree To The Terms & Conditions</span>
		</label>
		<div class="clear"> </div>
	</div>
	<input type="submit" value="SIGNUP">
</form>
<p>Don't have an Account? <a asp-action="Login"> Login Now!</a></p>	 

@section ValidateSection
	{
	<partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}



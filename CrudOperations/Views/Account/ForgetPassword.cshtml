@model ForgetPasswordVM
@{
	ViewData["Title"] = "ForgetPassword";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div asp-validation-summary="All" style="color:red">

</div>
<form action="SendEmail" method="post">

	<input class="text email" asp-for="Email" placeholder="Email" required="" style="text-align:center">

	<input type="submit" value="Reset Password">
</form>
<p>Don't have an Account? <a asp-action="Register"> Register Now!</a></p>
<div style="margin-top:12px;opacity:0.5">
	<p>Try to<a asp-action="Login">Login!</a></p>
</div>
@model EmployeeVm


<div class="form-group">
	<label asp-for="name"></label>
	<input class="form-control" asp-for="name" readonly />
	<span class="text-danger" asp-validation-for="name"></span>
</div>


<div class="form-group">
	<label asp-for="Salary"></label>
	<input class="form-control" asp-for="Salary" readonly />
	<span class="text-danger" asp-validation-for="Salary"></span>
</div>



<div class="form-group">
	<label asp-for="age"></label>
	<input class="form-control" asp-for="age" readonly />
	<span class="text-danger" asp-validation-for="age"></span>
</div>


<div class="form-group">
	<label asp-for="EmailAddress"></label>
	<input class="form-control" asp-for="EmailAddress" readonly />
	<span class="text-danger" asp-validation-for="EmailAddress"></span>
</div>

<div class="form-group">
	<label asp-for="IsActive"></label>
	<input class="form-control" asp-for="IsActive" readonly />
	<span class="text-danger" asp-validation-for="IsActive"></span>
</div>

<div class="form-group">
	<label asp-for="NumberPhone"></label>
	<input class="form-control" asp-for="NumberPhone" readonly />
	<span class="text-danger" asp-validation-for="NumberPhone"></span>
</div>


<div class="form-group">
	<label asp-for="HireDate"></label>
	<input class="form-control" asp-for="HireDate" readonly />
	<span class="text-danger" asp-validation-for="HireDate"></span>
</div>

	<div>
	@{
		if (Model.ImageName is  not null)
		{
			<img src="~/Filles/Image/@Model.ImageName" class="w-25" alt="This Image OF @Model.name" />
			<input hidden asp-for="ImageName" />
		}
	}


	</div>


@model IEnumerable<RoleViewModel>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Roles</h1>

<form action="/role/Index">
	 <div class="row my-5">
		<div class="col-lg-9">
			<input class="form-control" name="SearchValue">

		</div>
		<div class="col-lg-3">
			<button type="submit" class="btn btn-primary">Search</button>

		</div>
	 </div>
</form>


@{
	if (Model.Count() > 0)
	{



		<center>
			<a class="btn btn-outline-primary" asp-action="Create">Create Role</a>
		</center>
		<div class="my-4">
			<table class="table table-dark table-striped">
				<thead>
					<tr>
						<th>@Html.DisplayNameFor(x=>x.id)</th>
						<th>@Html.DisplayNameFor(x=>x.RoleName)</th>

						<th>Delete</th>
						<th>Update</th>
						<th>Details</th>

					</tr>
				</thead>

				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<th>@item.id</th>
							<th>@Html.DisplayFor(x=>@item.RoleName)</th>

							<partial name="PartialView/ButtonsIndex" model="@item.id">

						</tr>
					}

				</tbody>
			</table>
		</div>
	}
	else
	{
		<center>
			<div class="alert alert-warning">

				<p class="alert alert-warning text-danger"> No Roles Here</p>
				<a class="btn btn-success" asp-action="Create" asp-controller="Role">Create Roles</a>

			</div>

		</center>
	}
}
